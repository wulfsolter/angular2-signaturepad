{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./ngfactory",
    "debug": false
  }
}